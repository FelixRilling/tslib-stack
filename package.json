{
	"name": "tslib-stack",
	"version": "15.0.0",
	"description": "A small & flexible stack for building modern TypeScript libraries.",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/main.js"
		}
	},
	"scripts": {
		"start": "npm run dist",
		"dist": "npm run clean && npm run lint && npm run build && npm run test && npm run docs",
		"clean": "rimraf ./dist ./docs",
		"build": "tsc --build ./src/tsconfig.json",
		"lint": "eslint ./src/ ./__tests__/ --ext .ts",
		"fix": "eslint ./src/ ./__tests__/ --ext .ts --fix",
		"test": "jest",
		"docs": "typedoc"
	},
	"keywords": [
		"stack",
		"ts"
	],
	"author": {
		"name": "Felix Rilling",
		"email": "contact@rilling.dev",
		"url": "https://rilling.dev"
	},
	"license": "MIT",
	"homepage": "https://github.com/FelixRilling/tslib-stack#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FelixRilling/tslib-stack.git"
	},
	"bugs": {
		"url": "https://github.com/FelixRilling/tslib-stack/issues"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.5.1",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.4",
		"typedoc": "^0.22.14",
		"typescript": "~4.6.3"
	}
}
